
<div class="form__step1">

    <div class="block__form">
        <form method="post" class="form__content">

            <label for="inputEmail" class="item__text--regular">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder='votreemail@mail.fr'required autofocus>
            <label for="inputPassword" class="item__text--regular">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <input type="hidden" name="tunel_booking" value="tunnel_booking">
            <button class="form__btn btn__connect item__text--regular " type="submit">
                Suivant
            </button>
            <p class="size--xs item__text--light pad-y--small">Pas de compte ? <a href="{{ path('app_subscribe')}}" class="text--underline"> S'inscrire </a> </p>
        </form>
    </div>

</div>
   
{% block stylesheets %}
<link rel="stylesheet" href="/css/form.css">
{% endblock %}
