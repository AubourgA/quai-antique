{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}

<header>
            {% include '/partials/_navbar.html.twig' %}

            <section class="header__content">
                <h1 class="main__title">Réservation</h1>
            </section>
</header>

<main class="container">

    <section class="progress-bar__wrapper">

        <ul class="progress-bar">
            <li class="step previous">
                <p class="step__number">1</p>
                <p class="step__title">Identification</p>
            </li>
            <li class="step previous ">
                <p class="step__number">2</p>
                <p  class="step__title">Reservation</p>
            </li>
              <li class="step current ">
                <p class="step__number">3</p>
                <p  class="step__title">Confirmation</p>
            </li>
        </ul>
    </section>

    <section class="form__block">
       <h2 class="step__form">Réserver une table au restaurant</h2>

        <p class="flash--confirm">Votre demande a bien été enregistrée ✔️</p>
       
        <div class="content">
            <h3 class="text--bold">Détail de votre réservation :</h3>
        
            <table class="table--valid">
                    <tr>
                        <th class="text--bold">Date :</th>
                        <td class="text--regular">{{lastbooking.Date|date('d/m/Y')}}</td>
                    </tr>
                    <tr>
                        <th class="text--bold">A :</th>
                        <td class="text--regular">{{lastbooking.time|date('H:i')}}</td>
                    </tr>
                    <tr>
                        <th class="text--bold">Pour :</th>
                        <td class="text--regular">{{ lastbooking.numberPerson }} personne(s)</td>
                    </tr>
            
            </table>
                <p class="text--light">Vous allez recevoir un mail de confirmation suite à votre réservation</p>
            
                <p class="cancel-booking text--light">Vous pouvez annuler votre réservation simplement : </p>
                <ul class="cancel-list text--light">
                    <li>dans votre espace client</li>
                    <li>par téléphone</li>
                    <li>par email</li>
                </ul>
                
                <p class="text--regular"> ***  Nous vous remercions pour votre réservation ***</p>

          
        </div>
    </section>

</main>

<footer>
     {% include '/partials/_footer.html.twig' %}
</footer>

{% endblock %}

